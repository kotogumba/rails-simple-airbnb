<div class="map" style="height: 350px; background-image: url(<%=@flat.image_url %>)">

</div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <%= @flat.name %>
        <%= @flat.address %>
      </div>
      <div class="flat-show-card">
        <h2>A bit more about this flat...</h2>
        <%= @flat.description %>
        <div class="map" style="height: 350px;"></div>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <form action>
          <div class="input-group mb-3">
            <span class="input-group-text" id="start-date-label">From</span>
            <input type="text" class="form-control" placeholder="<%=Date.current%>">
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" id="end-date-label">To</span>
            <input type="text" class="form-control" placeholder="<%=Date.current%>">
          </div>
          <div class="btn btn-success" style="width: 100%;">Book</div>
        </form>
      </div>

      <div class="flat-show-card">
        <h2>Details</h2>
        <p><%= @flat.number_of_guests %> people <%= @flat.price_per_night %>â‚¬</p>
      </div>
      <div class="flat-show-card">
        <div class="d-flex flex-row justify-content-between">
          <div>
            <p>Share</p>
          </div>
          <div>
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
