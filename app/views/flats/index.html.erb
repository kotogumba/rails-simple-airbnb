
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All flats (<%= @flats.size%>)</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
    <p> All <%= @flats.size%> flats </p>
    </div>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card mb-3">
          <div class="flat-show-card" style="background-color: #F8F9FA;">
            <div class="card-image" style="background-image: url(<%=flat.image_url%>)"></div>
            <h5 class="card-title p-2"><%= flat.name %></h5>
            <p class="card-text px-3"><%= flat.address %></p>
            <div class="d-flex flex-row">
              <p class="card-text px-3"><%= flat.price_per_night %> <i class="fa-solid fa-euro-sign"></i></i></p>
              <p class="card-text px-3"><%= flat.number_of_guests %> <i class="fa-solid fa-users"></i></p>
            </div>
          </div>
          <div class="m-2">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "link-warning" %>
            <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link-danger" %>
          </div>

        </div>
      </div>
    <% end %>

  </div>
</div>
